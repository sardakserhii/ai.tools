        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.0",
        "@types/cheerio": "^0.22.35",
        "@types/node": "^22.19.1",
        "@vercel/node": "^5.5.12",
        "eslint": "^9.39.0",
        "globals": "^16.2.0",
        "prettier": "^3.5.3",
        "tsx": "^4.19.4",
