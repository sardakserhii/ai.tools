{
    "name": "ai.tools",
    "version": "0.3.0",
    "description": "Automated AI tools news aggregation service with LLM-powered digests and Telegram publishing",
    "type": "module",
    "keywords": [
        "ai",
        "news",
        "aggregator",
        "typescript",
        "supabase",
        "vercel",
        "telegram",
        "llm",
        "gemini",
        "openai"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/sardakserhii/ai.tools"
    },
    "scripts": {
        "dev": "tsx api/run-daily-digest.ts",
