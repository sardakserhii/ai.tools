{
    "version": 2,
    "builds": [
        {
            "src": "api/*.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/run-daily-digest",
            "dest": "/api/run-daily-digest.ts"
        }
    ],
    "crons": [
        {
            "path": "/api/run-daily-digest?telegram=true",
            "schedule": "0 6 * * *"
        }
    ]
}
