{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "rootDir": "./",
        "outDir": "./dist",
        "lib": ["ES2022"],
        "types": ["node"]
    },
    "include": ["src/**/*.ts", "api/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
